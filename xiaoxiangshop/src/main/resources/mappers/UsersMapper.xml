<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.xiaoxiangshop.demos.dao.IUsersDao">
    <resultMap id="UserAll" type="users">
        <result column="role_id" property="role_id"/>
        <association property="role" column="role_id"
                     select="com.example.xiaoxiangshop.demos.dao.IRoleDao.selectById"/>
    </resultMap>
    <select id="findAllUsers" resultMap="UserAll">
        select * from users where user_id != 1
    </select>

    <insert id="register">
        insert into users values (null,#{username},#{password},#{sex},#{age},#{birthday},#{nickname},#{phone},null,0,0,0,now(),now(),2)
    </insert>

    <select id="findUsersByuser_id" resultType="users">
        select * from users where user_id = #{user_id}
    </select>
</mapper>
