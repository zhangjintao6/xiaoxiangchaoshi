<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.xiaoxiangshop.demos.dao.ICartsDao">
    <insert id="addCart">
        insert into carts
        values (null, #{user_id}, #{product_id}, #{quantity});

    </insert>

    <select id="findCartsByUserId" resultType="carts">
        select *
        from carts
        where user_id = #{id};

    </select>

    <update id="update">
        update carts
        set quantity = #{quantity}
        where user_id = #{user_id}
          and product_id = #{product_id};

    </update>

    <delete id="delCartByUserid">
        delete
        from carts
        where user_id = #{id};

    </delete>

    <delete id="delCartByPid">
        delete
        from carts
        where product_id = #{id};
    </delete>

    <resultMap id="map" type="carts">
        <id property="cart_id" column="cart_id"/>
        <result property="user_id" column="user_id"/>
        <result property="product_id" column="product_id"/>
        <result property="quantity" column="quantity"/>
        <association property="products" column="product_id" select="com.example.xiaoxiangshop.demos.dao.IProductsDao.selectById">

        </association>
    </resultMap>

    <select id="findCartByUserid" resultMap="map">
        select * from carts where user_id = #{id}
    </select>
</mapper>
