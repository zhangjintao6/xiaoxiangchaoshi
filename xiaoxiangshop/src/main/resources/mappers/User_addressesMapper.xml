<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.xiaoxiangshop.demos.dao.IUser_addressesDao">
    <insert id="addressAdd">
        insert into user_addresses values (null,null,#{address_name},#{province},#{city},#{county},#{other_name},#{other_sex},#{other_phone},#{default_address})
    </insert>

    <update id="setDefaultAddress">
        update user_addresses set default_address = 0
    </update>
</mapper>
